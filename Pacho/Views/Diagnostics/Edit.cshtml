@model Pacho.Controllers.DiagnosticQuestionEditVM
@{
    ViewData["Title"] = "Editar Pregunta de Diagnóstico";
}

<link rel="stylesheet" href="~/css/Diseases/Index.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

<div class="main-container" data-aos="fade-up">
    <div class="dashboard-header">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h2 class="mb-1"><i class="fa-solid fa-pen-to-square me-2"></i>@ViewData["Title"]</h2>
                <p class="mb-0">Solo se permite editar el <strong>texto</strong> y el <strong>orden</strong>. Las respuestas están fijas: <strong>Sí / No</strong>.</p>
            </div>
            <a asp-action="Index" class="btn btn-success">
                <i class="fa-solid fa-arrow-left me-1"></i> Volver
            </a>
        </div>
    </div>

    <!-- Formulario -->
    <form asp-action="Edit" method="post" class="card p-3" style="border-left:4px solid var(--accent-green)">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="QuestionOrder" class="form-label">Orden</label>
            <input asp-for="QuestionOrder" class="form-control" type="number" min="1" max="10" placeholder="1 - 10" />
            <small class="text-muted">Valores permitidos: 1 a 10. Debe ser único.</small>
            <span asp-validation-for="QuestionOrder" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="QuestionText" class="form-label">Pregunta</label>
            <input asp-for="QuestionText" class="form-control" placeholder="Escribe el enunciado de la pregunta" />
            <span asp-validation-for="QuestionText" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <span class="badge bg-secondary me-1">Sí</span>
            <span class="badge bg-secondary">No</span>
            <small class="text-muted d-block mt-1">
                Las respuestas están forzadas en la base de datos (Sí/No). Si necesitas cambiarlo, hazlo en los <em>constraints</em>/semillas.
            </small>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success">
                <i class="fa-solid fa-floppy-disk me-1"></i> Guardar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa-solid fa-xmark me-1"></i> Cancelar
            </a>
        </div>
    </form>
</div>

<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
    AOS.init({ duration: 600, easing: 'ease-out-quad', once: true });
</script>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
