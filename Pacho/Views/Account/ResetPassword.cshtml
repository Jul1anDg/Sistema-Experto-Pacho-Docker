@model Pacho.Models.ViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Definir nueva contraseña";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PACHO | Definir nueva contraseña</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Reusamos el MISMO CSS del login -->
    <link rel="stylesheet" href="~/css/Account/Login.css">
    <link rel="stylesheet" href="~/css/Account/ResetPassword.css">
</head>
<body>
    <!-- Partículas como en el login -->
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>

    <div class="login-wrapper">
        <!-- Panel izquierdo (branding) -->
        <div class="brand-panel">
            <div class="brand-content">
                <div class="brand-logo">
                    <img src="~/LogoPaxho.png" alt="Logo de Pacho" style="height: 80px; margin-right: 5px;">
                    <h1>PACHO | Asistente</h1>
                </div>

                <h2 class="login-title">Crea tu nueva contraseña</h2>
                <p class="login-subtitle">Refuerza la seguridad de tu cuenta con una clave robusta</p>

                <ul class="features-list">
                    <li>
                        <i class="fas fa-lock"></i>
                        <div class="feature-text">
                            <h4>Enlace seguro</h4>
                            <p>Este proceso está protegido y expira</p>
                        </div>
                    </li>
                    <li>
                        <i class="fas fa-key"></i>
                        <div class="feature-text">
                            <h4>Buena práctica</h4>
                            <p>Usa una frase larga o combina símbolos</p>
                        </div>
                    </li>
                    <li>
                        <i class="fas fa-shield-halved"></i>
                        <div class="feature-text">
                            <h4>Sin reutilizar</h4>
                            <p>Evita repetir contraseñas de otros sitios</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Panel derecho (formulario) -->
        <div class="login-panel">
            <div class="login-form-container">
                <h2 class="form-title">Definir nueva contraseña</h2>
                <p class="form-subtitle">Ingresa y confirma tu nueva contraseña</p>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="validation-summary" style="color:red;">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                }

                <div class="password-rules">
                    Recomendado: mínimo 8 caracteres, con mayúscula, minúscula, número y símbolo.
                </div>

                <form asp-action="ResetPassword" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Token" />

                    <div class="form-group">
                        <label class="form-label" asp-for="NewPassword">Nueva contraseña</label>
                        <div class="input-with-icon">
                            <i class="fas fa-lock input-icon"></i>
                            <input asp-for="NewPassword" type="password" class="form-input" id="NewPassword"
                                   placeholder="••••••••" autocomplete="new-password" />
                            <button type="button" class="password-toggle" data-target="NewPassword" aria-label="Mostrar/ocultar contraseña">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <div class="strength" aria-hidden="true"><div id="strengthBar"></div></div>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label" asp-for="ConfirmPassword">Confirmar contraseña</label>
                        <div class="input-with-icon">
                            <i class="fas fa-lock input-icon"></i>
                            <input asp-for="ConfirmPassword" type="password" class="form-input" id="ConfirmPassword"
                                   placeholder="••••••••" autocomplete="new-password" />
                            <button type="button" class="password-toggle" data-target="ConfirmPassword" aria-label="Mostrar/ocultar contraseña">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="login-button" style="margin-top:12px;">
                        <i class="fas fa-floppy-disk"></i> Guardar contraseña
                    </button>
                </form>

                <div class="divider">
                    <span class="divider-text">¿Ya puedes iniciar sesión?</span>
                </div>

                <p class="back-link">
                    <a asp-controller="Account" asp-action="Login"><i class="fas fa-arrow-left"></i> Volver al inicio de sesión</a>
                </p>
            </div>
        </div>
    </div>

    <script>
        // Partículas (mismo comportamiento del login)
        document.querySelectorAll('.particle').forEach(p => {
            const randomTop = Math.random() * 100;
            const randomLeft = Math.random() * 100;
            const randomDuration = 15 + Math.random() * 15;
            p.style.top = `${randomTop}%`;
            p.style.left = `${randomLeft}%`;
            p.style.animationDuration = `${randomDuration}s`;
        });

        // Mostrar/ocultar contraseña
        document.querySelectorAll('.password-toggle').forEach(btn => {
            btn.addEventListener('click', () => {
                const targetId = btn.getAttribute('data-target');
                const input = document.getElementById(targetId);
                const isPwd = input.type === 'password';
                input.type = isPwd ? 'text' : 'password';
                btn.innerHTML = isPwd ? '<i class="fas fa-eye-slash"></i>' : '<i class="fas fa-eye"></i>';
            });
        });

        // Medidor básico de fortaleza
        const pwd = document.getElementById('NewPassword');
        const bar = document.getElementById('strengthBar');
        if (pwd && bar) {
            pwd.addEventListener('input', () => {
                const v = pwd.value || "";
                let score = 0;
                if (v.length >= 8) score++;
                if (/[A-Z]/.test(v)) score++;
                if (/[a-z]/.test(v)) score++;
                if (/\d/.test(v)) score++;
                if (/[^A-Za-z0-9]/.test(v)) score++;
                const pct = Math.min(100, score * 20);
                bar.style.width = pct + '%';
            });
        }
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
