@model IEnumerable<Pacho.Models.Expert>
@{
    ViewData["Title"] = "Gestión de Expertos - PACHO Asistente";
    var total = Model.Count();
    var activos = Model.Count(e => (e.User.Status ?? 0) == 1);
    var inactivos = total - activos;
    var aprobados = Model.Count(e => (e.TestState ?? "").ToLower().Contains("aprob"));
    var reprobados = Model.Count(e => (e.TestState ?? "").ToLower().Contains("reprob"));
}
<link rel="stylesheet" href="~/css/Questions/Index.css">
<link rel="stylesheet" href="~/css/Admin/PendingExperts.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css" />

<div class="container-fluid py-4">
    <div class="row mb-3">
        <div class="col-12">
            <div class="pacho-header">
                <div class="d-flex align-items-center mb-2">
                    <div class="pacho-logo me-3"><i class="fas fa-users"></i></div>
                    <div>
                        <h2 class="pacho-title mb-0">PACHO-Asistente</h2>
                        <p class="pacho-subtitle mb-0">Gestión de Expertos del Sistema</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Estadisticas -->
    <div class="mb-4">
        <div class="stats-row">
            <div class="stat-card"><div class="stat-icon"><i class="fas fa-database"></i></div><div class="stat-content"><h3>@total</h3><p>Total</p></div></div>
            <div class="stat-card"><div class="stat-icon"><i class="fas fa-user-check"></i></div><div class="stat-content"><h3>@activos</h3><p>Activos</p></div></div>
            <div class="stat-card"><div class="stat-icon"><i class="fas fa-user-slash"></i></div><div class="stat-content"><h3>@inactivos</h3><p>Inactivos</p></div></div>
            <div class="stat-card"><div class="stat-icon"><i class="fas fa-check-circle"></i></div><div class="stat-content"><h3>@aprobados</h3><p>Aprobados</p></div></div>
            <div class="stat-card"><div class="stat-icon"><i class="fas fa-times-circle"></i></div><div class="stat-content"><h3>@reprobados</h3><p>Reprobados</p></div></div>
        </div>
    </div>

    <!-- Tabla-->
    <div class="row">
        <div class="col-12">
            <div class="card pacho-card shadow-lg">
                <div class="card-header pacho-card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0 text-white">Expertos del Sistema</h4>
                    <small class="text-white-50">Total: @total</small>
                </div>

                <div class="card-body p-0 pacho-table-wrap">
                    @if (Model.Any())
                    {
                        <table class="pacho-table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nombre</th>
                                    <th>Email</th>
                                    <th>Estado</th>
                                    <th>Test</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="experts-body">
                                @foreach (var e in Model)
                                {
                                    var activo = (e.User.Status ?? 0) == 1;
                                    var test = (e.TestState ?? "").Trim().ToLower();
                                    var pillClass = test.Contains("aprob") ? "aprob" :
                                    test.Contains("reprob") ? "reprob" :
                                    test.Contains("pend") ? "pend" : "";

                                    <tr data-search="@($"{e.User.Name} {e.User.LastName} {e.User.Email}")"
                                        data-estado="@(activo ? "activo" : "inactivo")"
                                        data-test="@e.TestState">
                                        <td data-label="#">@e.IdExpert</td>

                                        <td class="pacho-name" data-label="Nombre">
                                            @e.User.Name @e.User.LastName
                                        </td>

                                        <td data-label="Email">
                                            <span class="truncate">@e.User.Email</span>
                                        </td>

                                        <td data-label="Estado">
                                            <span class="@(activo ? "badge-on" : "badge-off")">
                                                @(activo ? "Activo" : "Inactivo")
                                            </span>
                                        </td>

                                        <td data-label="Test">
                                            <span class="pill @pillClass">
                                                <i class="fas fa-tag"></i> @e.TestState
                                            </span>
                                        </td>

                                        <td class="text-end actions-cell" data-label="Acciones">
                                            <div class="actions-cell">
                                                <form asp-action="EnableTest" asp-route-id="@e.IdExpert" method="post">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn-compact @(activo ? "btn-dangerP" : "btn-prim")">
                                                        <i class="fa @(activo ? "fa-ban" : "fa-check")"></i>
                                                        <span>@(activo ? "No Habilitar" : "Habilitar")</span>
                                                    </button>
                                                </form>
                                                <form asp-action="Details" asp-route-id="@e.IdExpert" method="post">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn-compact btn-infoP @(activo ? "btn-dangerP" : "btn-prim")">
                                                        <i class="fa fa-eye"></i><span> Ver</span>
                                                    </button>
                                                </form>
                                                 <form asp-action="DeleteRequest" asp-route-id="@e.IdExpert" method="post" 
                                                      onsubmit="return confirm('¿Estás seguro de eliminar esta solicitud?');" 
                                                      style="display:inline;">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn-compact btn-dangerP">
                                                        <i class="fa fa-trash"></i><span> Eliminar</span>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-center p-5">No hay expertos registrados</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
<script>AOS.init({ once: true, duration: 700, easing: "ease-out-cubic" });</script>
<script>
    // Búsqueda por nombre/email y filtro por estado/test
    const $buscar = document.getElementById('buscar-expert');
    const $filtro = document.getElementById('filtro-estado');

    function aplicaFiltros() {
        const q = ($buscar?.value || '').toLowerCase().trim();
        const estado = ($filtro?.value || '').toLowerCase(); 

        document.querySelectorAll('#experts-body tr').forEach(tr => {
            const txt = (tr.dataset.search || '').toLowerCase();
            const est = (tr.dataset.estado || '').toLowerCase();
            const test = (tr.dataset.test || '').toLowerCase();

            const matchTexto = q === '' || txt.includes(q);
            const matchEstado = estado === '' || est === estado || test.includes(estado);
            tr.style.display = (matchTexto && matchEstado) ? '' : 'none';
        });
    }
    $buscar?.addEventListener('input', aplicaFiltros);
    $filtro?.addEventListener('change', aplicaFiltros);
</script>
